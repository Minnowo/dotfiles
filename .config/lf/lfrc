
# using https://github.com/NikitaIvanovV/ctpv for preview
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

# interpreter for shell commands
set shell bash

# Draw nice outlines
set drawbox true

set shellopts '-eu'

# leave some space at the top and the bottom of the screen
set scrolloff 10

# Use the `dim` attribute instead of underline for the cursor in the preview pane
set cursorpreviewfmt "\033[7;2m"

set ratio 0:3:3





# period to toggle showing hidden files
map . set hidden!

# use enter for shell commands
map <enter> shell

# show the result of execution of previous commands
map ` !true

# mkdir command. See wiki if you want it to select created dir
map a :push %mkdir<space>

# f5 to reload 
map <f-5> reload

# f2 for rename selected
map <f-2> push :rename<space>


map gm cd /mnt
map gd cd ~/Documents
map gD cd ~/Downloads





# define a custom 'rename' command without prompt for overwrite
cmd rename %[ -e $1 ] && printf "file exists" || mv $f $1

# define a custom 'open' command that does nothing
cmd open ${{
}}

# define a command which runs `file` on the selected file
cmd file %{{
    set -f
    output="$(file $f)"
    printf "${output##*:}"
}}

# command to run 7zip archive on all selected files
cmd zip ${{
    set -f
    7z a $1 $fx
}}

